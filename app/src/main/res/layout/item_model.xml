<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Colored Header -->
        <View
            android:id="@+id/colorHeader"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/gradient_horizontal"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Icon -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/iconCard"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/md_theme_primary_container"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@+id/colorHeader"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_3d_model"
                app:tint="@color/md_theme_primary" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Model Name -->
        <TextView
            android:id="@+id/tvModelName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:text="Model Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/md_theme_on_surface"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="@+id/iconCard"
            app:layout_constraintStart_toEndOf="@+id/iconCard"
            app:layout_constraintEnd_toStartOf="@+id/btnOptions" />

        <!-- Model Description -->
        <TextView
            android:id="@+id/tvModelDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:text="Description"
            android:textSize="14sp"
            android:textColor="#757575"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@+id/tvModelName"
            app:layout_constraintStart_toEndOf="@+id/iconCard"
            app:layout_constraintEnd_toStartOf="@+id/btnOptions" />

        <!-- Options Button -->
        <ImageButton
            android:id="@+id/btnOptions"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_more_vert"
            app:tint="#757575"
            android:contentDescription="Options"
            app:layout_constraintTop_toTopOf="@+id/iconCard"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Info Row -->
        <LinearLayout
            android:id="@+id/infoRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/iconCard">

            <!-- File Size -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_storage"
                    app:tint="@color/md_theme_secondary" />

                <TextView
                    android:id="@+id/tvModelSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="0 KB"
                    android:textSize="12sp"
                    android:textColor="#757575" />
            </LinearLayout>

            <!-- Upload Date -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_calendar"
                    app:tint="@color/md_theme_secondary" />

                <TextView
                    android:id="@+id/tvUploadDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="Today"
                    android:textSize="12sp"
                    android:textColor="#757575" />
            </LinearLayout>
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@+id/infoRow">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnView"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="View 3D"
                android:textSize="14sp"
                app:icon="@drawable/ic_view_3d"
                app:iconGravity="textStart"
                app:cornerRadius="12dp"
                style="@style/Widget.Material3.Button.TonalButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDelete"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="4dp"
                app:icon="@drawable/ic_delete"
                app:iconGravity="textStart"
                app:iconTint="@color/md_theme_tertiary"
                app:cornerRadius="12dp"
                android:visibility="gone"
                style="@style/Widget.Material3.Button.OutlinedButton" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
